{
  "name": "lift-lab",
  "version": "1.0.0",
  "description": "An elevator simulation engine / game, similar to mini metro based off my obsession with elevators in my office!",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@lift-lab/web",
    "build": "npm run build --workspace=@lift-lab/sim && npm run build --workspace=@lift-lab/web",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "type-check": "npm run type-check --workspace=@lift-lab/sim && npm run type-check --workspace=@lift-lab/web"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SuperZooper3/LiftLab.git"
  },
  "keywords": ["elevator", "simulation", "algorithm", "typescript", "react"],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SuperZooper3/LiftLab/issues"
  },
  "homepage": "https://github.com/SuperZooper3/LiftLab#readme"
}